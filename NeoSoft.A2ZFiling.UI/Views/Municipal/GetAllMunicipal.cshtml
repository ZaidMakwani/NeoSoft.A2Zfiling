        //function to handle create modal

        $(function () {
            var card = $('#placeholder2');

            $('button[data-toggle="ajax-modal"]').click(function (event) {
                var url = $(this).data('url');
                var decodeUrl = decodeURIComponent(url);
                $.get(decodeUrl).done(function (data) {
                    card.html(data);
                    card.find('.modal').modal('show');

                    // Unbind previously bound event handler
                    card.off('click', '[data-save="modal"]');

                    // Event delegation for dynamically loaded content
                    card.on('click', '[data-save="modal"]', function (event) {
                        var form = $(this).parents('.modal').find('form');
                        var actionUrl = form.attr('action');
                        var url = '@Url.Action("Create", "Municipal")';
                        var sendData = form.serialize();

                        $.post(url, sendData).done(function (data) {
                            card.find('.modal').modal('hide');
                            card.find('.modal-body').prepend('<div class="alert alert-success" role="alert">' + "Municipal Created Successfully." + '</div>');
                            // card.find('.modal').modal('hide');
                            location.reload();


                        }).fail(function (xhr, status, error) {
                            var errorMessage = xhr.responseText;
                            console.log(errorMessage);
                            // Update the modal content to display the error message
                            //card.find('.modal-body').prepend('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                            card.find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');

                        });
                    });
                });
            });
        });


        ///----------------------------------------------------------------------------------


        // Function to show the delete modal


        $(document).on('click', '.trigger-modal', function () {
            var MunicipalId = $(this).data("id");
            // Set data attribute of delete button inside modal for further reference
            $('.delete-confirm-muncipal').data('id', MunicipalId);
            $('#myModal').modal('show');
        });

        // Event delegation for handling delete button click inside the modal
        $(document).on('click', '.delete-confirm-muncipal', function () {
            var MunicipalId = $(this).data("id");
            var deleteUrl = '@Url.Action("Delete", "Municipal")' + '?id=' + MunicipalId;

            $.ajax({
                url: deleteUrl,
                type: 'GET',
                success: function (result) {
                    console.log('Municipal deleted successfully.');
                    // alert('State deleted successfully');
                    $('#myModal').modal('hide');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error("Error deleting Municipal: ", error);
                    alert("Error deleting Municipal. Please try again.");
                }
            });
        });

        //-------------------------------------------------------------------------------------------------
        //function to handle editMunicipal in the modal


        $(document).on('click', '.edit-button-muncipal', function () {
            var MunicipalId = $(this).data("id");
            var editUrl = '@Url.Action("Edit", "Municipal")' + '?id=' + MunicipalId;

            // AJAX request to fetch data for editing
            $.ajax({
                url: editUrl,
                type: 'GET',
                success: function (data) {
                    // Load the partial view into the placeholder2 div
                    $('#placeholder2').html(data);
                    // Show the edit modal
                    $('#updateModal4').modal('show');

                },
                error: function (xhr, status, error) {
                    console.error("Error fetching Municipal data: ", error);
                    alert("Error fetching Municipal data. Please try again.");
                }
            });
        });


        // Function to update data after saving
        function updateData() {
            var MunicipalId = $('#MunicipalId').val();
            var editUrl = '@Url.Action("Edit", "Municipal")' + '?id=' + MunicipalId;

            // AJAX request to fetch updated data
            $.ajax({
                url: editUrl,
                type: 'GET',
                success: function (data) {
                    // Replace the content in the placeholder2 div with the updated data
                    $('#placeholder2').html(data);
                    // Close the modal or perform any other action as needed
                    $('#updateModal4').modal('hide');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching updated Municipal data: ", error);
                    alert("Error fetching updated Municipal data. Please try again.");
                }
            });
        }



        $(document).on('click', '#saveButtonMuncipal', function () {

            // Perform validation and submit data via AJAX
            $.ajax({
                url: '@Url.Action("Edit", "Municipal")',
                type: 'POST',
                data: $('#MunicipalForm').serialize(),
                success: function (response) {
                    // Check if the response indicates success
                    if (response) {
                        updateData(); // Call function to update data
                        // alert('Municipal Updated successfully');
                        $('#updateModal4').modal('hide');
                        var successHtml = '<div class="alert alert-success" role="alert">' + "Municipal Updated Successfully." + '</div>';
                        $('#updateModal4 .modal-body').prepend(successHtml);
                        location.reload();
                        // $('#updateModal').modal('hide');
                    }
                    else {
                        alert("An error occurred while saving data. Please try again.");
                    }
                },


                error: function (xhr, status, error) {
                    // Display more detailed error message from server response
                    var errorMessage = xhr.responseText;
                    if (errorMessage) {
                        var errorHtml = '<div class="alert alert-danger" role="alert">' + errorMessage + '</div>';
                        $('#updateModal4 .modal-body').prepend(errorHtml); // Prepend error message to modal body
                    } else {
                        alert("An error occurred while saving data. Please try again.");
                    }
                }
            });
        });

        $(document).on('click', '#closeButton, .close', function () {
            // Close the modal
            $('#updateModal4').modal('hide');
        });



    </script>

</body>
</html>
