 @model IEnumerable<NeoSoft.A2ZFiling.UI.ViewModels.MunicipalVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminLTE 3 | DataTables</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <meta http-equiv="refresh" content="600">
    <div class="wrapper">
        <section class="content m-5 ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="row justify-content-end">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-header">
                                            <h3 class="card-title">Location Setting</h3>
                                        </div>

                                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="tableA-tab" data-toggle="tab" href="#tableA" role="tab" aria-controls="tableA" aria-selected="true">Municipal</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="tableB-tab" data-toggle="tab" href="#tableB" role="tab" aria-controls="tableB" aria-selected="true">Zones</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="tableC-tab" data-toggle="tab" href="#tableC" role="tab" aria-controls="tableC" aria-selected="true">Cities</a>
                                            </li>

                                           

                                        </ul>
                                            

                                        <!-- Tab panes -->
                                        <div class="tab-content">
                                            <div class="tab-pane fade show active" id="tableA" role="tabpanel" aria-labelledby="tableA-tab">
                                                <div class="card">
                                                    <div id="placeholder2"></div>

                                                    <div class="card-header">
                                                        <div class="float-right">
                                                            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#createModal3"
                                                                    data-url="@Url.Action("Create", "Municipal")">
                                                                <i class="fas fa-plus"></i>
                                                            </button>

                                                            <div class="navbar-search-block">
                                                                <form class="form-inline">
                                                                    <div class="input-group input-group-sm">
                                                                        <input class="form-control form-control-navbar" type="search" placeholder2="Search" aria-label="Search">
                                                                        <div class="input-group-append">
                                                                            <button class="btn btn-navbar" type="submit">
                                                                                <i class="fas fa-search"></i>
                                                                            </button>
                                                                            <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                                                                <i class="fas fa-times"></i>
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>




                                                        <div class="card-body">
                                                            <table id="example5" class="table table-bordered table-striped">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Id</th>
                                                                        <th>Municipal Corporation</th>
                                                                        <th>Pin Code</th>
                                                                        <th>Cities</th>
                                                                        <th>States</th>

                                                                        @* <th>States</th> *@
                                                                        <th>Zones</th>

                                                                        <th>Status</th>

                                                                        <th>Actions</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var item in Model)
                                                                    {
                                                                        <tr>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.MunicipalId)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.MunicipalName)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.Pincode)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.CityName)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.StateName)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.ZoneName)
                                                                            </td>
                                                                            <td>
                                                                                @if (item.IsActive)
                                                                                {
                                                                                    <span class="text-success font-weight-bold">Active</span>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span class="text-danger font-weight-bold">Inactive</span>
                                                                                }
                                                                            </td>
                                                                            <td>
                                                                                <a class="btn btn-primary btn-sm edit-button-muncipal" data-toggle="ajax-modal" data-target="#updateModal4"
                                                                                   data-url="@Url.Action("Edit", "Municipal")" data-id="@item.MunicipalId">
                                                                                    <i class="fas fa-edit"></i>
                                                                                </a>


                                                                                <button class="btn btn-danger btn-sm trigger-modal" data-id="@item.MunicipalId">
                                                                                    <i class="fas fa-trash-alt"></i>
                                                                                </button>

                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="tab-pane fade" id="tableB" role="tabpanel" aria-labelledby="tableB-tab">
                                                <div id="zonePlaceholderssss"></div>
                                            </div>

                                            <div class="tab-pane fade" id="tableC" role="tabpanel" aria-labelledby="tableC-tab">
                                                <div id="cityPlaceholder"></div>
                                            </div>

                                           

                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <!-- /.row -->
                                </div>
                                <!-- /.container-fluid -->
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </div>


    <!-- Delete Modal -->
    <div id="myModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this item?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger delete-confirm-muncipal">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables -->
    <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>

    <!-- DataTables Buttons extension -->
    <script src="../../plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="../../plugins/jszip/jszip.min.js"></script>
    <script src="../../plugins/pdfmake/pdfmake.min.js"></script>
    <script src="../../plugins/pdfmake/vfs_fonts.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../dist/js/demo.js"></script>
    <script src="~/js/script.js"></script>
    <!-- Page specific script -->
    <script>
        // $(document).ready(function () {
        $("#example5").DataTable({
            "responsive": true,
            "lengthChange": false,
            "autoWidth": false,
            // "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "paging": true,
            "pageLength": 4,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true
        }).buttons().container().appendTo('#example5_wrapper .col-md-6:eq(0)');

