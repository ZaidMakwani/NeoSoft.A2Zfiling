@model NeosoftA2Zfilings.Views.ViewModels.RoleVM;

@{
    ViewData["Title"] = "Update";

}

<!-- Create Modal -->    @*  @ modal-dialog-centered 
@ <div id="createModal" class="modal" tabindex="-1" role="dialog"> @ *@
<div id="updateModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateRoleForm" asp-action="Edit" asp-controller="Role" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                       @*  @ <label asp-for="ZoneId">Zone Id:</label>  *@
                        <input asp-for="RoleId" class="form-control" hidden/>
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="RoleName">Role Name:</label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger" id="entityName"></span>
                    </div>
                    <input type="hidden" asp-for="IsActive" />


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeButton" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveButton" data-save="modal">Save</button>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}