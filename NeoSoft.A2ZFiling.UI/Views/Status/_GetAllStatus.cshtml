<script>

    console.log("Before DataTable initialization");

    $("#example6").DataTable({
        "responsive": true,
        "lengthChange": false,
        "autoWidth": false,
        "buttons": ["csv"],
        "paging": true,
        "pageLength": 4,
        "lengthChange": false,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true
    })/* .buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)'); */
    $('#example6').DataTable().buttons().container().appendTo('#example6_wrapper .col-md-6:eq(0)');
    console.log("After DataTable initialization");


    //function to handle create modal
    $(function () {
        var card = $('#statusPlaceholder');

        $('button[data-toggle="ajax-modal"]').click(function (event) {
            var url = $(this).data('url');
            var decodeUrl = decodeURIComponent(url);
            $.get(decodeUrl).done(function (data) {
                card.html(data);
                card.find('.modal').modal('show');

                // Unbind previously bound event handler
                card.off('click', '[data-save="statusModal"]');

                // Event delegation for dynamically loaded content
                card.on('click', '[data-save="statusModal"]', function (event) {
                    var form = $(this).parents('.modal').find('form');
                    var actionUrl = form.attr('action');
                    var url = '@Url.Action("Create", "Status")';
                    var sendData = form.serialize();

                    $.post(url, sendData).done(function (data) {
                        card.find('.modal').modal('hide');
                        card.find('.modal-body').prepend('<div class="alert alert-success" role="alert">' + "Status Created Successfully." + '</div>');

                        $('#table6-tab').tab('show');
                        // location.reload();
                        $('#statusDataPlaceholder').load('/Status/GetAll', function () {
                            console.log('Status data reloaded.');
                        });


                    }).fail(function (xhr, status, error) {
                        var errorMessage = xhr.responseText;
                        console.log(errorMessage);
                        // Update the modal content to display the error message
                        // card.find('.modal-body').prepend('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                        card.find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');

                    });
                });
            });
        });
    });


    //function to handle edit status

    $(document).on('click', '.editStatus-button', function () {
        var StatusId = $(this).data("id");
        var editUrl = '@Url.Action("Update", "Status")' + '?id=' + StatusId;

        // AJAX request to fetch data for editing
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                // Load the partial view into the placeholder div
                $('#statusPlaceholder').html(data);
                // Show the edit modal
                $('#updateModal').modal('show');
            },
            error: function (xhr, status, error) {
                console.error("Error fetching Status data: ", error);
                alert("Error fetching Status data. Please try again.");
            }
        });
    });


    // Function to update data after saving
    function updateData() {
        var StatusId = $('#StatusId').val(); // Assuming you have a hidden input field with the IndustryId
        var editUrl = '@Url.Action("Update", "Status")' + '?id=' + StatusId;

        // AJAX request to fetch updated data
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                // Replace the content in the placeholder div with the updated data
                $('#statusPlaceholder').html(data);
                // Close the modal
                $('#updateModal').modal('hide');

                $('#table6-tab').tab('show');

                $('#statusDataPlaceholder').load('/Status/GetAll', function () {
                    console.log('Status data reloaded.');
                });
            },
            error: function (xhr, status, error) {
                console.error("Error fetching updated Staus data: ", error);
                alert("Error fetching updated Status data. Please try again.");
            }
        });
    }

    $(document).on('click', '#statusSaveButton', function () {
        // Perform validation and submit data via AJAX
        $.ajax({
            url: '@Url.Action("Update", "Status")',
            type: 'POST',
            data: $('#updateStatusForm').serialize(),
            success: function (response) {
                console.log(response);
                // Check if the response indicates success
                if (response) {
                    updateData(); // Call function to update data
                    $('#statusPlaceholder').find('.modal-body').prepend('<div class="alert alert-success" role="alert">Status Updated Successfully.</div>');
                } else {
                    alert("An error occurred while saving data. Please try again.");
                }
            },
            error: function (xhr, status, error) {
                // Display more detailed error message from server response
                var errorMessage = xhr.responseText;
                $('#statusPlaceholder').find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
            }
        });
    });

    $(document).on('click', '#closeButton, .close', function () {
        // Close the modal
        $('#updateModal').modal('hide');
    });



    // Function to show the delete modal


    $(document).on('click', '.trigger-modal', function () {
        var StatusId = $(this).data("id");
        // Set data attribute of delete button inside modal for further reference
        $('.delete-status').data('id', StatusId);
        $('#myModal').modal('show');
    });

    // Event delegation for handling delete button click inside the modal
    $(document).on('click', '.delete-status', function () {
        var StatusId = $(this).data("id");
        var deleteUrl = '@Url.Action("Delete", "Status")' + '?id=' + StatusId;

        $.ajax({
            url: deleteUrl,
            type: 'GET',
            success: function (result) {
                console.log('Status deleted successfully.');
                // alert('Zone deleted successfully');
                $('#myModal').modal('hide');
                $('#table6-tab').tab('show');
                // location.reload();
                $('#statusDataPlaceholder').load('/Status/GetAll', function () {
                    console.log('Status data reloaded.');
                });
            },
            error: function (xhr, status, error) {
                console.error("Error deleting status: ", error);
                alert("Error deleting status. Please try again.");
            }
        });
    });

</script>