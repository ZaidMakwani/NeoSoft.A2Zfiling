    })/* .buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)'); */
    $('#example3').DataTable().buttons().container().appendTo('#example3_wrapper .col-md-6:eq(0)');


    console.log("After DataTable initialization");


        //function to handle delete

    $(document).on('click', '.triggerCompany-modal', function () {
        var CompanyId = $(this).data("id");
        // Set data attribute of delete button inside modal for further reference
        $('.delete-company').data('id', CompanyId);
        $('#myCompanyModal').modal('show');
    });

    // Event delegation for handling delete button click inside the modal
    $(document).on('click', '.delete-company', function () {
        var CompanyId = $(this).data("id");
        var deleteUrl = '@Url.Action("Delete", "Company")' + '?id=' + CompanyId;

        $.ajax({
            url: deleteUrl,
            type: 'GET',
            success: function (result) {
                console.log('Company deleted successfully.');
                alert('Company deleted successfully');
                $('#myCompanyModal').modal('hide');
                $('#table3-tab').tab('show');
                $('#companyDataPlaceholder').load('/Company/GetAll', function () {
                    console.log('Industry data reloaded.');
                });
            },
            error: function (xhr, status, error) {
                console.error("Error deleting company : ", error);
                alert("Error deleting company . Please try again.");
            }
        });
    });

 
 

    //----------------------------------------------------------------------------------------------------
    //function to handle create

    $('button[data-toggle="ajax-modal"]').click(function (event) {
        var url = $(this).data('url');
        console.log('Create modal URL:', url);
        var decodeUrl = decodeURIComponent(url);
        $.get(decodeUrl).done(function (data) {
            $('#companyPlaceholder').html(data);
            $('#createCompanyModal').modal('show');

            // Unbind previously bound event handler
            $('#companyPlaceholder').off('click', '#saveCompanyEntity');

            // Event delegation for dynamically loaded content
            $('#companyPlaceholder').on('click', '#saveCompanyEntity', function (event) {
                var form = $(this).parents('.modal').find('form');
                var actionUrl = form.attr('action');
                var url = '@Url.Action("Create", "Company")';
                var sendData = form.serialize();

                $.post(url, sendData).done(function (data) {

                    $('#companyPlaceholder').find('.error-message-container').prepend('<div class="alert alert-success" role="alert">' + "Company Created Successfully" + '</div>');
                    $('#companyPlaceholder').find('.modal').modal('hide');

                    $('#table3-tab').tab('show');
                    $('#companyDataPlaceholder').load('/Company/GetAll', function () {
                        console.log('Company data reloaded.');
                    });


                }).fail(function (xhr, status, error) {
                    var errorMessage = xhr.responseText;
                    console.log(errorMessage);
                    $('#companyPlaceholder').find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');

                });
            });
        });
    });


    //----------------------------------------------------------------------------------------------------

    //function to handle edit company in the modal


    $(document).on('click', '.editCompany-button', function () {
        var CompanyId = $(this).data("id");
        var editUrl = '@Url.Action("Update", "Company")' + '?id=' + CompanyId;

        // AJAX request to fetch data for editing
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                // Load the partial view into the placeholder div
                $('#companyPlaceholder').html(data);
                // Show the edit modal
                $('#updateCompanyModal').modal('show');

            },
            error: function (xhr, status, error) {
                console.error("Error fetching company  data: ", error);
                alert("Error fetching company  data. Please try again.");
            }
        });
    });


    // Function to update data after saving
    function updateData() {
        var CompanyId = $('#CompanyId').val();
        var editUrl = '@Url.Action("Update", "Company")' + '?id=' + CompanyId;

        // AJAX request to fetch updated data
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                $('#companyPlaceholder').html(data);

                // $('#updateCompanyModal').modal('hide');
                // $('#table3-tab').tab('show');

                // $('#companyDataPlaceholder').load('/Company/GetAll', function () {
                //     console.log('Company data reloaded.');
                // });

            },
            error: function (xhr, status, error) {
                console.error("Error fetching updated company  data: ", error);
                //alert("Error fetching updated company  data. Please try again.");
            }
        });
    }



    $(document).on('click', '#companyButton', function () {

        // Perform validation and submit data via AJAX
        $.ajax({
            url: '@Url.Action("Update", "Company")',
            type: 'POST',
            data: $('#updateCompanyForm').serialize(),
            success: function (response) {
                // Check if the response indicates success
                if (response) {
                    updateData(); // Call function to update data
                    // alert('City Updated successfully');
                    $('#companyPlaceholder').find('.error-message-container').prepend('<div class="alert alert-success" role="alert">' + "Company Updated Successfully" + '</div>');
                    $('#updateCompanyModal').modal('hide');
                    $('#table3-tab').tab('show');
                    $('#companyDataPlaceholder').load('/Company/GetAll', function () {
                        console.log('Company data reloaded.');
                    });
                   } else {
                    //alert("An error occurred while saving data. Please try again.");
                

                }
            },


            error: function (xhr, status, error) {
                // Display more detailed error message from server response
                var errorMessage = xhr.responseText;
                if (errorMessage) {
                    $('#companyPlaceholder').find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');

                   
                } else {
                    alert("An error occurred while saving data. Please try again.");
                }
            }
        });
    });

    $(document).on('click', '#closeButton, .close', function () {
        // Close the modal
        $('#updateCompanyModal').modal('hide');
    

    });


    </script>