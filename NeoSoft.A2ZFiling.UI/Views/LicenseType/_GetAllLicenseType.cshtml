@model IEnumerable<NeoSoft.A2ZFiling.UI.ViewModels.LicenseTypeVM>
<div class="card">
    <div id="placeholder"></div>

    <div class="card-header">
        <div class="float-right">
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#createModal" data-url="@Url.Action("Create", "LicenseType")">
                <i class="fas fa-plus"></i>
            </button>

            <div class="navbar-search-block">
                <form class="form-inline">
                    <div class="input-group input-group-sm">
                        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-navbar" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                            <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           @*  <td>
                                @Html.DisplayFor(modelItem => item.LicenseTypeId)
                            </td> *@
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LicenseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="text-success font-weight-bold">Active</span>
                                }
                                else
                                {
                                    <span class="text-danger font-weight-bold">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-primary btn-sm edit-button" data-toggle="ajax-modal" data-target="#updateModal"
                                        data-url="@Url.Action("Edit", "LicenseType")" data-id="@item.LicenseTypeId">
                                    <i class="fas fa-edit"></i>
                                </button>


                                <button class="btn btn-danger btn-sm trigger-modal" data-id="@item.LicenseTypeId">
                                    <i class="fas fa-trash-alt"></i>
                                </button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


<div id="myModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger delete-confirm">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- DataTables -->
<script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>

<!-- DataTables Buttons extension -->
<script src="../../plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="../../plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="../../plugins/jszip/jszip.min.js"></script>
<script src="../../plugins/pdfmake/pdfmake.min.js"></script>
<script src="../../plugins/pdfmake/vfs_fonts.js"></script>
<script src="../../plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="../../plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="../../plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

<script>

    console.log("Before DataTable initialization");
    // var startIndex = 1;
    $("#example1").DataTable({
        "responsive": true,
        "lengthChange": false,
        "autoWidth": false,
        "paging": true,
        "pageLength": 4,
        "lengthChange": false,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
       
    })/* .buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)'); */
    $('#example1').DataTable().buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');


    console.log("After DataTable initialization");


    //function to handle create modal


    $('button[data-toggle="ajax-modal"]').click(function (event) {
        var url = $(this).data('url');
        console.log('Create modal URL:', url);
        var decodeUrl = decodeURIComponent(url);
        $.get(decodeUrl).done(function (data) {
            $('#placeholder').html(data);
            $('#createModal').modal('show');

            // Unbind previously bound event handler
            $('#placeholder').off('click', '[data-save="modal"]');

            // Event delegation for dynamically loaded content
            $('#placeholder').on('click', '[data-save="modal"]', function (event) {
                var form = $(this).parents('.modal').find('form');
                var actionUrl = form.attr('action');
                var url = '@Url.Action("Create", "LicenseType")';
                var sendData = form.serialize();

                $.post(url, sendData).done(function (data) {
                    $('#placeholder').find('.modal').modal('hide');
                    $('#placeholder').find('.modal-body').prepend('<div class="alert alert-success" role="alert">' + "LicenseType Created Successfully." + '</div>');
                    // card.find('.modal').modal('hide');
                    $('#licenseTypeDataPlaceholder').load('/LicenseType/GetAll', function () {
                        console.log('License Type data reloaded.');


                }).fail(function (xhr, status, error) {
                    var errorMessage = xhr.responseText;
                    console.log(errorMessage);
                    // Update the modal content to display the error message
                    // card.find('.modal-body').prepend('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                    $('#placeholder').find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');

                });
            });
        });
    });

      


    // Function to show the delete modal


    $(document).on('click', '.trigger-modal', function () {
        var LicenseId = $(this).data("id");
        // Set data attribute of delete button inside modal for further reference
        $('.delete-confirm').data('id', LicenseId);
        $('#myModal').modal('show');
    });

    // Event delegation for handling delete button click inside the modal
    $(document).on('click', '.delete-confirm', function () {
        var LicenseId = $(this).data("id");
        var deleteUrl = '@Url.Action("Delete", "LicenseType")' + '?id=' + LicenseId;

        $.ajax({
            url: deleteUrl,
            type: 'GET',
            success: function (result) {
                console.log('License Type deleted successfully.');
                //alert('Zone deleted successfully');
                $('#myModal').modal('hide');
                    $('#licenseTypeDataPlaceholder').load('/LicenseType/GetAll', function () {
                        console.log('License Type data deleetd.');
            },
            error: function (xhr, status, error) {
                console.error("Error deleting license type: ", error);
                alert("Error deleting license type. Please try again.");
            }
        });
    });


    //-------------------------------------------------------------------------------------------------
    //function to handle editlicense in the modal


    $(document).on('click', '.edit-button', function () {
        var LicenseId = $(this).data("id");
        var editUrl = '@Url.Action("Edit", "LicenseType")' + '?id=' + LicenseId;

        // AJAX request to fetch data for editing
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                // Load the partial view into the placeholder div
                $('#placeholder').html(data);
                // Show the edit modal
                $('#updateModal').modal('show');

            },
            error: function (xhr, status, error) {
                console.error("Error fetching license type data: ", error);
                //alert("Error fetching license type data. Please try again.");
            }
        });
    });


    // Function to update data after saving
    function updateData() {
        var LicenseId = $('#LicenseTypeId').val();
        var editUrl = '@Url.Action("Edit", "LicenseType")' + '?id=' + LicenseId;

        // AJAX request to fetch updated data
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                // Replace the content in the placeholder div with the updated data
                $('#placeholder').html(data);
                // Close the modal or perform any other action as needed
                $('#updateModal').modal('hide');
                    $('#licenseTypeDataPlaceholder').load('/LicenseType/GetAll', function () {
                        console.log('License Type data fetched.');
            },
            error: function (xhr, status, error) {
                console.error("Error fetching updated license type data: ", error);
                //alert("Error fetching updated license type data. Please try again.");
            }
        });
    }



    $(document).on('click', '#saveButton', function () {

        // Perform validation and submit data via AJAX
        $.ajax({
            url: '@Url.Action("Edit", "LicenseType")',
            type: 'POST',
            data: $('#updateLicenseForm').serialize(),
            success: function (response) {
                // Check if the response indicates success
                if (response) {
                    updateData(); // Call function to update data
                    // alert('City Updated successfully');
                    $('#updateModal').modal('hide');
                    var successHtml = '<div class="alert alert-success" role="alert">' + "License Type Updated Successfully." + '</div>';
                    $('#updateModal .modal-body').prepend(successHtml);
                        $('#licenseTypeDataPlaceholder').load('/LicenseType/GetAll', function () {
                            console.log('License Type data updated.');
                    // $('#updateModal').modal('hide');
                }
                else {
                    var successHtml = '<div class="alert alert-danger" role="alert">' + "Error while updating License Type." + '</div>';
                    $('#updateModal .modal-body').prepend(successHtml);
                        $('#licenseTypeDataPlaceholder').load('/LicenseType/GetAll', function () {
                            console.log('An error occurred while saving data. Please try again.');
                    // alert("An error occurred while saving data. Please try again.");

                }
            },


            error: function (xhr, status, error) {
                // Display more detailed error message from server response
                var errorMessage = xhr.responseText;
                if (errorMessage) {
                    var errorHtml = '<div class="alert alert-danger" role="alert">' + errorMessage + '</div>';
                    $('#updateModal .modal-body').prepend(errorHtml); // Prepend error message to modal body
                } else {
                    alert("An error occurred while saving data. Please try again.");
                }
            }
        });
    });

    $(document).on('click', '#closeButton, .close', function () {
        // Close the modal
        $('#updateModal').modal('hide');
    });


</script>