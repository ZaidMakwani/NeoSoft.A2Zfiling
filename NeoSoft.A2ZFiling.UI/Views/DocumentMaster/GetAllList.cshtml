@model IEnumerable<NeoSoft.A2ZFiling.UI.ViewModels.DocumentMasterVM>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <section class="content m-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row justify-content-end">
                        <div class="col-lg-10">
                            <!-- Nav tabs -->

                            <div class="tab-pane fade show active" id="table1" aria-labelledby="table1-tab" style="width:auto;height:auto;white-space: nowrap">
                                <div class="card">
                                    <div id="placeholder"></div>
                                    <div class="card-header">
                                        <h3 class="card-title">Document Master</h3>
                                        <div class="float-right">
                                            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#createModal"
                                                    data-url="@Url.Action("Create", "DocumentMaster")">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                            <div class="navbar-search-block">
                                                <form class="form-inline" enctype="multipart/form-data">
                                                    <div class="input-group input-group-sm">
                                                        <input id="globalSearch" class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                                        <div class="input-group-append">
                                                            <button class="btn btn-navbar" type="submit">
                                                                <i class="fas fa-search"></i>
                                                            </button>
                                                            <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            <button id="downloadCsv" class="btn btn-success ml-2">
                                                <i class="fas fa-download"></i> Download CSV
                                            </button>
                                            
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                        @*  <label>Filter by Classification:</label><br />*@
                                        <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="classificationDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-filter"></i>
                                        </button>
                                            <div class="dropdown-menu" aria-labelledby="classificationDropdown">
                                            @foreach (var item in Model.Select(x => x.DocumentName).Distinct())
                                            {
                                            <label class="dropdown-item">
                                            <input type="checkbox" class="filter-checkbox" value="@item"> @item
                                            </label>
                                            }
                                            </div>
                                        </div>

                                            </div>
                                        </div> 
                                        <div class="table-responsive">
                                            <table id="example1" class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Document Name</th>
                                                        <th>Sample file</th>
                                                        <th>Document Formats</th>
                                                        <th>Actions</th>
                                                        
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>L - @Html.DisplayFor(modelItem => item.DocumentMasterId)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.DocumentName) </td>
                                                            <td><a href="~/@item.SampleFormat"> @Html.DisplayFor(modelItem => item.SampleFormat)</a></td>
                                                            <td>@Html.DisplayFor(modelItem => item.DocumentFormat)</td>
                                                           
                                                            <td>
                                                                <a class="btn btn-sm trigger-modal" asp-route-id="@item.DocumentMasterId" asp-action="Delete" asp-controller="DocumentMaster">
                                                                    @if (@item.IsActive)
                                                                    {
                                                                        <i class="fas fa-ban" style="color: green;"></i>
                                                                    }
                                                                    else
                                                                    {
                                                                        <i class="fas fa-ban " style="color: red;"></i>
                                                                    }
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#example1').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,

                "info": true,
                "autoWidth": false,
                "responsive": true
            });

            // Global search
            $('#globalSearch').on('keyup', function () {
                table.search(this.value).draw();
            });

            // Custom filter for Classification
            $('.filter-checkbox').on('change', function () {
                var searchTerms = [];
                $('.filter-checkbox:checked').each(function () {
                    searchTerms.push($(this).val());
                });
                table.column(2).search(searchTerms.join('|'), true, false).draw();
            });

            // Initialize Bootstrap dropdown
            $('.dropdown-toggle').dropdown();

            // CSV Download
            $('#downloadCsv').on('click', function () {
                var csv = [];
                var rows = document.querySelectorAll('#example1 tr');

                for (var i = 0; i < rows.length; i++) {
                    var row = [], cols = rows[i].querySelectorAll('td, th');
                    for (var j = 0; j < cols.length; j++) {
                        row.push(cols[j].innerText);
                    }
                    csv.push(row.join(','));
                }

                // Download CSV file
                var csvFile = new Blob([csv.join('\n')], { type: 'text/csv' });
                var downloadLink = document.createElement('a');
                downloadLink.download = 'DocumentMaster.csv';
                downloadLink.href = window.URL.createObjectURL(csvFile);
                downloadLink.style.display = 'none';
                document.body.appendChild(downloadLink);
                downloadLink.click();
                document.body.removeChild(downloadLink);
            });
        });



        //Create Modal

        $(function () {
            var card = $('#placeholder');
            debugger

            $('button[data-toggle="ajax-modal"]').click(function (event) {
                var url = $(this).data('url');
                var decodeUrl = decodeURIComponent(url);
                $.get(decodeUrl).done(function (data) {                   
                    card.html(data);
                    card.find('.modal').modal('show');

                    // Unbind previously bound event handler
                    card.off('click', '[data-save="modal"]');

                    // Event delegation for dynamically loaded content
                    card.on('click', '[data-save="modal"]', function (event) {
                        var form = $(this).parents('.modal').find('form')[0];
                        var url = '@Url.Action("Create", "DocumentMaster")';
                        var formData = new FormData(form); // Create FormData object
                        $.ajax({
                            type: 'POST',
                            url: url,
                            data: formData,
                            processData: false,  // Important: prevent jQuery from automatically processing the data
                            contentType: false,  // Important: tell jQuery not to set contentType
                            success: function (data) {
                                // Close the modal and reload the page on success
                                $('#createModal').modal('hide');
                                location.reload();
                            },
                            error: function (xhr, status, error) {
                                var errorMessage = xhr.responseText;
                                console.log(errorMessage);
                                // Display error message in modal body
                                $('.modal-body').prepend('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                            }
                        });
                        // $.post(url, sendData).done(function (data) {

                        //     card.find('.modal').modal('hide');
                        //     location.reload();

                        // }).fail(function (xhr, status, error) {
                        //     var errorMessage = xhr.responseText;
                        //     console.log(errorMessage);
                        //     // Update the modal content to display the error message
                        //     card.find('.modal-body').prepend('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                        // });
                    });
                });
            });
        });


    </script>
}
