@model NeoSoft.A2ZFiling.UI.ViewModels.DocumentMasterVM;

@{
    ViewData["Title"] = "Create";

}

<!-- Create Modal -->     @*  modal-dialog-centered
@ <div id="createModal" class="modal" tabindex="-1" role="dialog"> @ *@
<div id="createModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-labels="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createDocumentForm" asp-action="Create" asp-controller="DocumentMaster" method="post" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="DocumentName">Document Name:</label>
                        <input asp-for="DocumentName" class="form-control" />
                        <span asp-validation-for="DocumentName" class="text-danger" id="entityName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SampleFormatFile">File:</label>

                        <input type="file" asp-for="SampleFormatFile" name="SampleFormatFile" class="form-control"  />
                    </div>
                    <div class="form-group">
                        <label asp-for="DocumentFormat">Select Document Format:</label>
                        <input type="checkbox" asp-for="DocumentFormat" name="DocumentFormatList" value="pdf" /><label>pdf</label>
                        <input type="checkbox" asp-for="DocumentFormat" name="DocumentFormatList" value="png" /><label>png</label>
                        <input type="checkbox" asp-for="DocumentFormat" name="DocumentFormatList" value="jpg" /><label>jpg</label>
                        <input type="checkbox" asp-for="DocumentFormat" name="DocumentFormatList" value="jpeg" /><label>jpeg</label>
                        <span asp-validation-for="DocumentFormat" class="text-danger" id="entityName"></span>
                    </div> 
                </form>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveEntity" data-save="modal" >Save</button>

            </div>
        </div>
    </div>
</div>

