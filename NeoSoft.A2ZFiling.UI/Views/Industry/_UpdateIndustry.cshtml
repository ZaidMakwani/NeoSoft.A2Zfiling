@model NeoSoft.A2ZFiling.UI.ViewModels.IndustryVM

@{
    ViewData["Title"] = "Update";

}

<!-- Create Modal -->    

<div id="updateIndustryModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Industry</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span        >
                </button>
            </div>
            <div class="modal-body">
                <div class="error-message-container"></div>
                <form id="updateIndustryForm" asp-action="Update" asp-controller="Industry" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                 
                        <input asp-for="IndustryId" class="form-control" hidden />
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="IndustryName">Industry Name:</label>
                        <input asp-for="IndustryName" class="form-control" />
                        <span asp-validation-for="IndustryName" class="text-danger" id="entityName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShortName">Short Name:</label>
                        <input asp-for="ShortName" class="form-control" />
                        <span asp-validation-for="ShortName" class="text-danger" id="entityName"></span>
                    </div>
                    <input type="hidden" asp-for="IsActive" />


                </form>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeIndustryButton" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveIndustryButton" data-save="modal" data-dismiss="modal">Save</button>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

