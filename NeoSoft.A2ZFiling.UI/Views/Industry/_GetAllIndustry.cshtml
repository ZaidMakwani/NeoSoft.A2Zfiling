    //function to delete data 

    $(document).on('click', '.triggerIndustry-modal', function () {
        var IndustryId = $(this).data("id");
        // Set data attribute of delete button inside modal for further reference
        $('.delete-item').data('id', IndustryId);
        $('#myIndustryModal').modal('show');
    });

    // Event delegation for handling delete button click inside the modal
    $(document).on('click', '.delete-item', function () {
        var IndustryId = $(this).data("id");
        var deleteUrl = '@Url.Action("Delete", "Industry")' + '?id=' + IndustryId;

        $.ajax({
            url: deleteUrl,
            type: 'GET',
            success: function (result) {
                console.log('Industry deleted successfully.');
                //alert('Zone deleted successfully');
                $('#myIndustryModal').modal('hide');
                $('#table2-tab').tab('show');
                // location.reload();
                $('#industryDataPlaceholder').load('/Industry/GetAll', function () {
                    console.log('Industry data reloaded.');
                });
            },
            error: function (xhr, status, error) {
                console.error("Error deleting industry: ", error);
                alert("Error deleting industry. Please try again.");
            }
        });
    });


    $(document).on('click', '#btnIndustryButton, .close', function () {
        // Close the modal
        $('#myIndustryModal').modal('hide');
    });

    //function to handle create modal

    $('button[data-toggle="ajax-modal"]').click(function (event) {
        var url = $(this).data('url');
        console.log('Create modal URL:', url);
        var decodeUrl = decodeURIComponent(url);
        $.get(decodeUrl).done(function (data) {
            $('#Industryplaceholder').html(data);
            $('#createIndustryModal').modal('show');

            // Unbind previously bound event handler
            $('#Industryplaceholder').off('click', /* '[data-save="modal"]' */'#saveIndustryEntity');

            // Event delegation for dynamically loaded content
            $('#Industryplaceholder').on('click', /* '[data-save="modal"]' */ '#saveIndustryEntity', function (event) {
                var form = $(this).parents('.modal').find('form');
                var actionUrl = form.attr('action');
                var url = '@Url.Action("Create", "Industry")';
                var sendData = form.serialize();

                $.post(url, sendData).done(function (data) {
                     $('#Industryplaceholder').find('.modal-body').prepend('<div class="alert alert-success" role="alert">Industry Created Successfully.</div>');
                    $('#Industryplaceholder').find('.modal').modal('hide');
                    $('#table2-tab').tab('show');
                    // Reload industry data after creating a new industry
                    $('#industryDataPlaceholder').load('/Industry/GetAll'
                    , function () {
                        console.log('Industry data reloaded.');
                    });

                }).fail(function (xhr, status, error) {
                    var errorMessage = xhr.responseText;
                    console.log(errorMessage);
                    // Update the modal content to display the error message
                    $('#Industryplaceholder').find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                });
            });
        });
    });

    $(document).on('click', '#closeIndustryEntity, .close', function () {
        // Close the modal
        $('#createIndustryModal').modal('hide');
    });





    //function to handle editzone in the modal



    $(document).on('click', '.editIndustry-button', function () {
        var IndustryId = $(this).data("id");
        var editUrl = '@Url.Action("Update", "Industry")' + '?id=' + IndustryId;

        // AJAX request to fetch data for editing
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                // Load the partial view into the placeholder div
                $('#Industryplaceholder').html(data);
                // Show the edit modal
                $('#updateIndustryModal').modal('show');
            },
            error: function (xhr, status, error) {
                console.error("Error fetching Industry data: ", error);
                alert("Error fetching Industry data. Please try again.");
            }
        });
    });


    // Function to update data after saving
