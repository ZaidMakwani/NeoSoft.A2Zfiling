        var IndustryId = $('#IndustryId').val(); // Assuming you have a hidden input field with the IndustryId
        var editUrl = '@Url.Action("Update", "Industry")' + '?id=' + IndustryId;

        // AJAX request to fetch updated data
        $.ajax({
            url: editUrl,
            type: 'GET',
            success: function (data) {
                // Replace the content in the placeholder div with the updated data
                $('#Industryplaceholder').html(data);
                // Close the modal
                $('#updateIndustryModal').modal('hide');
                // $('#table2-tab').tab('show');
