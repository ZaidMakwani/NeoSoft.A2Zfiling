            }
        });
    }

    $(document).on('click', '#saveIndustryButton', function () {
        // Perform validation and submit data via AJAX
        $.ajax({
            url: '@Url.Action("Update", "Industry")',
            type: 'POST',
            data: $('#updateIndustryForm').serialize(),
            success: function (response) {
                console.log(response);
                // Check if the response indicates success
                if (response) {
                    updateData(); // Call function to update data
                    $('#Industryplaceholder').find('.modal-body').prepend('<div class="alert alert-success" role="alert">Industry Updated Successfully.</div>');
                    $('#updateIndustryModal').modal('hide');
                    $('#table2-tab').tab('show');
                    // Reload industry data after creating a new industry
                    $('#industryDataPlaceholder').load('/Industry/GetAll'
                        , function () {
                            console.log('Industry data reloaded.');
                        }
                    );
                } else {
                    console.log("An error occurred while saving data. Please try again.");
                    //alert("An error occurred while saving data. Please try again.");
                }
            },
            error: function (xhr, status, error) {
                // Display more detailed error message from server response
                var errorIndustryMessage = xhr.responseText;
                $('#Industryplaceholder').find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
            }
        });
    });

    $(document).on('click', '#closeIndustryButton, .close', function () {
        // Close the modal
        $('#updateIndustryModal').modal('hide');
    });

  


</script>
 