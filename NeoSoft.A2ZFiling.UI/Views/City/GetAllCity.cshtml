@model IEnumerable<NeoSoft.A2ZFiling.UI.ViewModels.CityVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminLTE 3 | DataTables</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>x
<body class="hold-transition sidebar-mini">
    <meta http-equiv="refresh" content="600">
    <div class="wrapper">
        <section class="content m-5 ">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="row justify-content-end">
                            <div class="col-lg-10">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">City</h3>
                                        <div class="card-tools">
                                            @*  <button type="button" class="btn btn-primary" id="createButton">
                                            Create
                                            </button> *@


                                            <div id="placeholder1"></div>
                                            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#createModal1"
                                                    data-url="@Url.Action("Create", "City")">
                                                <i class="fas fa-plus"></i>   @* Create *@
                                            </button>
                                            <div class="navbar-search-block">
                                                <form class="form-inline">
                                                    <div class="input-group input-group-sm">
                                                        <input class="form-control form-control-navbar" type="search" placeholder1="Search" aria-label="Search">
                                                        <div class="input-group-append">
                                                            <button class="btn btn-navbar" type="submit">
                                                                <i class="fas fa-search"></i>
                                                            </button>
                                                            <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <table id="example2" class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>City Name</th>
                                                    <th>State Name</th>
                                                    <th>Zone Name</th>
                                                    <th>Status</th>

                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.CityId)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.CityName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.State.StateName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Zones.ZoneName)
                                                        </td>
                                                        <td>
                                                            @if (item.IsActive)
                                                            {
                                                                <span class="text-success font-weight-bold">Active</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-danger font-weight-bold">Inactive</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-primary btn-sm edit-button" data-toggle="ajax-modal" data-target="#updateModal2"
                                                                    data-url="@Url.Action("EditCity", "City")" data-id="@item.CityId">
                                                                <i class="fas fa-edit"></i> @* Edit *@
                                                            </a>


                                                            <button class="btn btn-danger btn-sm trigger-modal" data-id="@item.CityId">
                                                                <i class="fas fa-trash-alt"></i> @* Delete *@
                                                            </button>

                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>



        <!-- Delete Modal -->
        <div id="myModal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Deletion</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this item?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger delete-confirm">Delete</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="../../plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="../../plugins/jszip/jszip.min.js"></script>
    <script src="../../plugins/pdfmake/pdfmake.min.js"></script>
    <script src="../../plugins/pdfmake/vfs_fonts.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="../../plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../dist/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        // $(document).ready(function () {
        $("#example2").DataTable({
            "responsive": true,
            "lengthChange": false,
            "autoWidth": false,
            // "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "paging": true,
            "pageLength": 4,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true
        }).buttons().container().appendTo('#example2_wrapper .col-md-6:eq(0)');

        //-----------------------------------------------------------------------------------------------------------------------

        //function to handle create modal

        $(function () {
            var card = $('#placeholder1');

            $('button[data-toggle="ajax-modal"]').click(function (event) {
                var url = $(this).data('url');
                var decodeUrl = decodeURIComponent(url);
                $.get(decodeUrl).done(function (data) {
                    card.html(data);
                    card.find('.modal').modal('show');

                    // Unbind previously bound event handler
                    card.off('click', '[data-save="modal"]');

                    // Event delegation for dynamically loaded content
                    card.on('click', '[data-save="modal"]', function (event) {
                        var form = $(this).parents('.modal').find('form');
                        var actionUrl = form.attr('action');
                        var url = '@Url.Action("Create", "City")';
                        var sendData = form.serialize();

                        $.post(url, sendData).done(function (data) {
                            card.find('.modal').modal('hide');
                            card.find('.modal-body').prepend('<div class="alert alert-success" role="alert">' + "City Created Successfully." + '</div>');
                            // card.find('.modal').modal('hide');
                            location.reload();


                        }).fail(function (xhr, status, error) {
                            var errorMessage = xhr.responseText;
                            console.log(errorMessage);
                            // Update the modal content to display the error message
                            // card.find('.modal-body').prepend('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                            card.find('.error-message-container').html('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');

                        });
                    });
                });
            });
        });


        ///----------------------------------------------------------------------------------


        // Function to show the delete modal


        $(document).on('click', '.trigger-modal', function () {
            var CityId = $(this).data("id");
            // Set data attribute of delete button inside modal for further reference
            $('.delete-confirm').data('id', CityId);
            $('#myModal').modal('show');
        });
        
        // Event delegation for handling delete button click inside the modal
        $(document).on('click', '.delete-confirm', function () {
            var CityId = $(this).data("id");
            var deleteUrl = '@Url.Action("DeleteCity", "City")' + '?id=' + CityId;

            $.ajax({
                url: deleteUrl,
                type: 'GET',
                success: function (result) {
                    console.log('City deleted successfully.');
                    // alert('City deleted successfully');
                    $('#myModal').modal('hide');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error("Error deleting city: ", error);
                    alert("Error deleting city. Please try again.");
                }
            });
        });

        //-------------------------------------------------------------------------------------------------
        //function to handle editcity in the modal


        $(document).on('click', '.edit-button', function () {
            debugger
            var CityId = $(this).data("id");
            var editUrl = '@Url.Action("EditCity", "City")' + '?id=' + CityId;
            
            // AJAX request to fetch data for editing
            $.ajax({
                url: editUrl,
                type: 'GET',
                success: function (data) {
                    // Load the partial view into the placeholder1 div
                    $('#placeholder1').html(data);
                    // Show the edit modal
                    $('#updateModal2').modal('show');
                    
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching City data: ", error);
                    alert("Error fetching City data. Please try again.");
                }
            });
        });


        // Function to update data after saving
        function updateData() {
            var CityId = $('#CityId').val();
            var editUrl = '@Url.Action("EditCity", "City")' + '?id=' + CityId;

            // AJAX request to fetch updated data
            $.ajax({
                url: editUrl,
                type: 'GET',
                success: function (data) {
                    // Replace the content in the placeholder1 div with the updated data
                    $('#placeholder1').html(data);
                    // Close the modal or perform any other action as needed
                    $('#updateModal2').modal('hide');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching updated City data: ", error);
                    alert("Error fetching updated City data. Please try again.");
                }
            });
        }



        $(document).on('click', '#saveButton', function () {

            // Perform validation and submit data via AJAX
            $.ajax({
                url: '@Url.Action("EditCity", "City")',
                type: 'POST',
                data: $('#cityForm').serialize(),
                success: function (response) {
                    // Check if the response indicates success
                    if (response ) {
                        updateData(); // Call function to update data
                        // alert('City Updated successfully');
                        $('#updateModal2').modal('hide');
                        var successHtml = '<div class="alert alert-success" role="alert">' + "City Updated Successfully." + '</div>';
                        $('#updateModal2 .modal-body').prepend(successHtml);
                        location.reload();
                        // $('#updateModal').modal('hide');
                    }
                    else {
                        alert("An error occurred while saving data. Please try again.");
                    }
                },


                error: function (xhr, status, error) {
                    // Display more detailed error message from server response
                    var errorMessage = xhr.responseText;
                    if (errorMessage) {
                        var errorHtml = '<div class="alert alert-danger" role="alert">' + errorMessage + '</div>';
                        $('#updateModal2 .modal-body').prepend(errorHtml); // Prepend error message to modal body
                    } else {
                        alert("An error occurred while saving data. Please try again.");
                    }
                }
            });
        });

        $(document).on('click', '#closeButton, .close', function () {
            // Close the modal
            $('#updateModal2').modal('hide');
        });



    </script>

</body>
</html>