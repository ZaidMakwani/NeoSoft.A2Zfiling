@model NeoSoft.A2ZFiling.UI.ViewModels.CityVM

<div id="updateModal2" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@((Model.CityId == 0 ? "Create City" : "Update City"))</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="cityForm" asp-action="@(Model.CityId == 0 ? "Create" : "EditCity")" asp-controller="City" method="post">
                    <input asp-for="CityId" type="hidden" />

                    <div class="form-group">
                        <label asp-for="CityName">City Name:</label>
                        <input asp-for="CityName" class="form-control" />
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StateId">State:</label>
                        @Html.DropDownListFor(model => model.StateId, ViewBag.lstState as SelectList, "-- Select State --", new { @class = "form-control" })
                        <span asp-validation-for="StateId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ZoneId">Zone:</label>
                        @Html.DropDownListFor(model => model.ZoneId, ViewBag.lstZone as SelectList, "-- Select Zone --", new { @class = "form-control" })
                        <span asp-validation-for="ZoneId" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Is Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveButton">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            var placeholder1 = $('#placeholder1');

            $('button[data-toggle="ajax-modal"]').click(function (event) {
                var url = $(this).data('url');
                $.get(url).done(function (data) {
                    placeholder1.html(data);
                    placeholder1.find('.modal').modal('show');

                    placeholder1.off('click', '#saveButton');

                    placeholder1.on('click', '#saveButton', function (event) {
                        var form = placeholder1.find('form');
                        var actionUrl = form.attr('action');
                        var sendData = form.serialize();

                        $.post(actionUrl, sendData).done(function (data) {
                            if (data.success) {
                                placeholder1.find('.modal').modal('hide');
                                location.reload();
                            } else {
                                var errorHtml = '<div class="alert alert-danger" role="alert">Error saving City. Please try again.</div>';
                                placeholder1.find('.modal-body').prepend(errorHtml);
                            }
                        }).fail(function (xhr, status, error) {
                            var errorMessage = xhr.responseText;
                            var errorHtml = '<div class="alert alert-danger" role="alert">' + errorMessage + '</div>';
                            placeholder1.find('.modal-body').prepend(errorHtml);
                        });
                    });
                }).fail(function (xhr, status, error) {
                    var errorMessage = xhr.responseText;
                    var errorHtml = '<div class="alert alert-danger" role="alert">' + errorMessage + '</div>';
                    placeholder1.find('.modal-body').prepend(errorHtml);
                });
            });
        });
    </script>
}
