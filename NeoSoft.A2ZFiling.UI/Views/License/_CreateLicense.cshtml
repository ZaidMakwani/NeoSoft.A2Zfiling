@model NeoSoft.A2ZFiling.UI.ViewModels.LicenseVM

@{
    ViewData["Title"] = "Create";

}

<!-- Create Modal -->     @* modal-dialog-centered *@
@* <div id="createModal" class="modal" tabindex="-1" role="dialog"> *@
<div id="createLicenseModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Licenses</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="error-message-container"></div>
                <form id="createLicenseForm" asp-action="Create" asp-controller="License" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="LicenseName">Enter License Name:</label>
                        <input asp-for="LicenseName" class="form-control" placeholder="License Name" />
                        <span asp-validation-for="LicenseName" class="text-danger" id="entityName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShortName">Short Name:</label>
                        <input asp-for="ShortName" class="form-control" placeholder="Short Name" />
                        <span asp-validation-for="ShortName" class="text-danger" id="entityName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId">Category:</label>
                        <select id="CategoryId" name="CategoryId" class="form-control" asp-for="CategoryId">
                            <option value="">Choose Category</option>
                            @foreach (var category in ViewBag.Categories as SelectList)
                            {
                                <option value="@category.Value">@category.Text</option>
                            }
                        </select>
                       
                        <span asp-validation-for="CategoryId" class="text-danger" id="entityName"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="ShortList">ShortList:</label>
                        <select id="ShortList" name="ShortList" class="form-control" asp-for="ShortList">
                           <option value="">Select Value</option>
                           @foreach(var value in Enum.GetValues(typeof(ShortList))){
                                <option value="@value">@value</option>
                            }
                        </select>
                        <span asp-validation-for="ShortList" class="text-danger" id="entityName"></span>
                    </div>
                    


                </form>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeLicenseEntity">Close</button>
                <button type="button" class="btn btn-primary" id="saveLicenseEntity" data-save="modal" @* data-dismiss="modal" *@>Save</button>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
