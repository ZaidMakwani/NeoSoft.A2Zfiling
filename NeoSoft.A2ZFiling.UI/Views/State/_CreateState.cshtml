@model NeoSoft.A2ZFiling.UI.ViewModels.StateVM

<div id="createModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create State</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Debugging output -->
                @* <div>
                    Zones count: @(ViewBag.lstZone != null ? (ViewBag.lstZone as SelectList).Count().ToString() : "No zones")
                </div> *@
                <div class="error-message-container"></div>
                <form id="createStateForm" asp-action="Create" asp-controller="State" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="StateName">State Name:</label>
                        <input type="text" asp-for="StateName" class="form-control" />
                        <span asp-validation-for="StateName" class="text-danger" id="entityName"></span>
                    </div>
                    @* <div class="form-group">
                        <label asp-for="ZoneID">Zone:</label>
                        @Html.DropDownList("ZoneID", ViewBag.lstZone as SelectList, "-- Select Zone --", new { @class = "form-control" })
                        <span asp-validation-for="ZoneID" class="text-danger"></span>
                    </div> *@
                    <div class="form-group form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Is Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveEntity" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            var card = $('#placeholder');

            $('button[data-toggle="ajax-modal"]').click(function (event) {
                var url = $(this).data('url');
                $.get(url).done(function (data) {
                    card.html(data);
                    card.find('.modal').modal('show');

                    card.off('click', '[data-save="modal"]');

                    card.on('click', '[data-save="modal"]', function (event) {
                        var form = $(this).parents('.modal').find('form');
                        var actionUrl = form.attr('action');
                        var sendData = form.serialize();

                        $.post(actionUrl, sendData).done(function (data) {
                            if (data.success) {
                                card.find('.modal').modal('hide');
                                location.reload();
                            } else {
                                var errorHtml = '<div class="alert alert-danger" role="alert">' + "Error creating state. Please try again." + '</div>';
                                card.find('.modal-body').prepend(errorHtml);
                            }
                        }).fail(function (xhr, status, error) {
                            var errorMessage = xhr.responseText;
                            var errorHtml = '<div class="alert alert-danger" role="alert">' + errorMessage + '</div>';
                            card.find('.modal-body').prepend(errorHtml);
                        });
                    });
                }).fail(function (xhr, status, error) {
                    var errorMessage = xhr.responseText;
                    var errorHtml = '<div class="alert alert-danger" role="alert">' + errorMessage + '</div>';
                    card.find('.modal-body').prepend(errorHtml);
                });
            });
        });
    </script>
}
