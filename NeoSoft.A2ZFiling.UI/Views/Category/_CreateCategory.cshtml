@model NeoSoft.A2ZFiling.UI.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Create";

}

<!-- Create Modal -->     @* modal-dialog-centered *@
@* <div id="createModal" class="modal" tabindex="-1" role="dialog"> *@
<div id="createCategoryModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Categories</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="error-message-container"></div>
                <form id="createCategoryForm" asp-action="Create" asp-controller="Category" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CategoryName">Enter Name:</label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Name"/>
                        <span asp-validation-for="CategoryName" class="text-danger" id="entityName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShortName">Enter Short Name:</label>
                        <input asp-for="ShortName" class="form-control" placeholder="Short Name"/>
                        <span asp-validation-for="ShortName" class="text-danger" id="entityName"></span>
                    </div>


                </form>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeCategoryEntity">Close</button>
                <button type="button" class="btn btn-primary" id="saveEntity" data-save="categoryModal" data-dismiss="modal">Save</button>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

