    <div class="card-header">
        <div class="float-right">
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#createModal" data-url="@Url.Action("Create", "Category")">
                <i class="fas fa-plus"></i>
            </button>

            <div class="navbar-search-block">
                <form class="form-inline">
                    <div class="input-group input-group-sm">
                        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-navbar" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                            <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    

    <div class="card-body">
        <table id="example4" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Name</th>
                    <th>Short Names</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortName)
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="text-success font-weight-bold">Active</span>
                            }
                            else
                            {
                                <span class="text-danger font-weight-bold">Inactive</span>
                            }
                        </td>
                        <td>
                                <button class="btn btn-primary btn-sm editCategory-button" data-toggle="ajax-modal" data-target="#updateCategoryModal"
                                    data-url="@Url.Action("Update", "Category")" data-id="@item.CategoryId">
                                <i class="fas fa-edit"></i>
                            </button>


                            <button class="btn btn-danger btn-sm triggerCategory-modal" data-id="@item.CategoryId">
                                <i class="fas fa-trash-alt"></i>
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>

<!-- Delete Modal -->
<div id="myCategoryModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger delete-category">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCategoryButton">Close</button>
            </div>
        </div>
    </div>
</div>
    
