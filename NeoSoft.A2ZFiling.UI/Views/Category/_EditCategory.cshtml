@model NeoSoft.A2ZFiling.UI.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Update";

}

<!-- Create Modal -->     @* modal-dialog-centered *@
@* <div id="createModal" class="modal" tabindex="-1" role="dialog"> *@
<div id="updateModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="error-message-container"></div>
                <form id="updateCategoryForm" asp-action="Update" asp-controller="Category" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        @* <label asp-for="ZoneId">Zone Id:</label> *@
                        <input asp-for="CategoryId" class="form-control" hidden />
                        @* <span asp-validation-for="ZoneId" class="text-danger" id="entityName"></span> *@
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryName">Enter Name:</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger" id="entityName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShortName">Enter Short Name:</label>
                        <input asp-for="ShortName" class="form-control" />
                        <span asp-validation-for="ShortName" class="text-danger" id="entityName"></span>
                    </div>

                    <input type="hidden" asp-for="IsActive" />


                </form>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeButton" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="categorySaveButton" data-save="modal">Save</button>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
