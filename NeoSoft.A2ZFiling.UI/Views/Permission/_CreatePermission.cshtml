@model NeoSoft.A2ZFiling.UI.ViewModels.PermissionVM

@{
    ViewData["Title"] = "Create";

}

<!-- Create Modal -->     @* modal-dialog-centered *@
@* <div id="createModal" class="modal" tabindex="-1" role="dialog"> *@
<div id="createModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Permission</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="error-message-container"></div>
                <form id="createPermissionForm" asp-action="Create" asp-controller="Permission" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="ControllerName">Controller Name:</label>
                        <input asp-for="ControllerName" class="form-control" />
                        <span asp-validation-for="ControllerName" class="text-danger" id="entityName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ActionName">Action Name:</label>
                        <input asp-for="ActionName" class="form-control" />
                        <span asp-validation-for="ActionName" class="text-danger" id="entityName"></span>
                    </div>


                </form>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeEntity">Close</button>
                <button type="button" class="btn btn-primary" id="saveEntity" data-save="modal">Save</button>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
