
@{
    Layout = null;
}
@model NeoSoft.A2ZFiling.UI.ViewModels.UserDetailVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Upload Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f4f7fa;
        }

        .container {
            display: flex;
			margin:18px;
            width: 90%;
			height:40rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            background-color: white;
        }

		.sidebar {
			background-color: #e9f3ff;
			padding: 20px;
			width: 30%;
		}

			.sidebar h2 {
				margin-top: 0;
			}


		<pre > <style >
		.wrapper {
			width: 330px;
			font-family: 'Helvetica';
			font-size: 14px;
		}

		.StepProgress {
			position: relative;
			padding-left: 45px;
			list-style: none;
		}

			.StepProgress::before {
				display: inline-block;
				content: '';
				position: absolute;
				top: 0;
				left: 15px;
				width: 10px;
				height: 100%;
			}

		.StepProgress-item {
			position: relative;
			counter-increment: list;
		}

			.StepProgress-item:not(:last-child) {
				padding-bottom: 20px;
			}

			.StepProgress-item::before {
				display: inline-block;
				content: '';
				position: absolute;
				left: -30px;
				height: 100%;
				width: 10px;
			}

			.StepProgress-item::after {
				content: '';
				display: inline-block;
				position: absolute;
				top: 0;
				left: -37px;
				width: 20px;
				height: 20px;
				border: 2px solid #CCC;
				border-radius: 50%;
				background-color: #FFF;
			}

			.StepProgress-item.is-done::before {
				border-left: 2px solid green;
			}

			.StepProgress-item.is-done::after {
				content: "✔";
				font-size: 13px;
				color: #FFF;
				text-align: center;
				border: 2px solid green;
				background-color: green;
			}

			.StepProgress-item.current::before {
				border-left: 2px solid green;
			}

			.StepProgress-item.current::after {
				content: counter(list);
				padding-top: 1px;
				width: 25px;
				height: 25px;
				top: -4px;
				left: -40px;
				font-size: 14px;
				text-align: center;
				color: green;
				border: 2px solid green;
				background-color: white;
			}

		.StepProgress strong {
			display: block;
		}

		 .file-upload-container {
			border: 1px solid #ccc;
			padding: 20px;
			margin-bottom: 20px;
			border-radius: 10px;
			border-radius:8px;
			position: relative;
		}

		.file-upload-section{
			display: flex;
			align-items: center;
			margin-right: 100px;
		}

		</style>
        
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <h2>Welcome!<br>Abhinandan Kumar</h2>
            <div style="margin-left:10px">
                <div class="wrapper">
                    <ul class="StepProgress">
                        <div class="StepProgress-item is-done"><strong>Registration <br />Completed</strong></div>
						<div class="StepProgress-item current"><strong>Upload Documents</strong></div>
                        <div class="StepProgress-item current"><strong>Process Payment</strong></div>
                        <div class="StepProgress-item current"><strong>Executive Assigned</strong></div>
                        <div class="StepProgress-item current"><strong>Application Submitted <br />To Authority</strong></div>
						<div class="StepProgress-item current"><strong>Application Under <br />Process With Authority</strong></div>
						<div class="StepProgress-item current"><strong>Registration <br />Completed</strong></div>
						<div class="StepProgress-item current"><strong>Courier Dispatch <br />Status</strong></div>
                    </ul>
                </div>
                </div>
     </aside>

		<main style="margin:15px">
		 <h2>Upload Documents</h2>
			<p>Kindly proceed to upload documents for <strong>GST Registration</strong></p>
			<form enctype="multipart/form-data" asp-action="Create" asp-controller="UserDetail" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="input-group mb-3">
			  <div class="input-group-prepend">
				<span class="input-group-text" id="basic-addon1">Company Registered Name</span>
			  </div>
			  <input type="text" asp-for="CompanyName" class="form-control"  aria-label="name" aria-describedby="basic-addon1" size="60">
					<span asp-validation-for="CompanyName" class="text-danger" id="entityName"></span>
		  </div>

		<div class="input-group mb-3">
			<div class="input-group-prepend">
					<span class="input-group-text" id="basic-addon1">Company Registered Address</span>
			</div>
			<input type="text" asp-for="CompanyAddress" class="form-control"  aria-label="address" aria-describedby="basic-addon1" size="60">
			<span asp-validation-for="CompanyAddress" class="text-danger" id="entityName"></span>
		</div>

			<div class="input-group mb-3">
				<div class="row">
					<div class="col">
						<div class="input-group " style="margin-right:170px">
							<select class="form-select" aria-label="Select Company Type" asp-for="CompanyId">
									<option value="">Select Company Type</option>
									@foreach (var company in ViewBag.Companies as SelectList)
									{
										<option value="@company.Value">@company.Text</option>
									}
							</select>
								<span asp-validation-for="CompanyId" class="text-danger" id="entityName"></span>
						</div>
					</div>

					<div class="col">
						<div class="input-group " style="margin-right:170px">
							<select class="form-select"  aria-label="Select Industry Type" asp-for="IndustryId">
									<option value="">Select Industry Type</option>
									@foreach (var industry in ViewBag.Industries as SelectList)
									{
										<option value="@industry.Value">@industry.Text</option>
									}
							</select>
								<span asp-validation-for="IndustryId" class="text-danger" id="entityName"></span>
						</div>
					</div>
				</div>
			</div>


			<div class="input-group mb-3">
				<div class="row">
					<div class="col">
						<div class="input-group " style="margin-right:100px">
							<select class="form-select" aria-label="Select State " asp-for="StateId">
									<option value="">Select State </option>
									@foreach (var state in ViewBag.States as SelectList)
									{
										<option value="@state.Value">@state.Text</option>
									}
							</select>
								<span asp-validation-for="StateId" class="text-danger" id="entityName"></span>
						</div>
					</div>

					<div class="col">
						<div class="input-group " style="margin-right:100px">
							<select class="form-select" aria-label="Select City " asp-for="CityId">
									<option value="">Select City </option>
									@foreach (var city in ViewBag.Cities as SelectList)
									{
										<option value="@city.Value">@city.Text</option>
									}
							</select>
								<span asp-validation-for="CityId" class="text-danger" id="entityName"></span>
						</div>
					</div>

					<div class="col">
						<div class="input-group" style="margin-right:100px">
							<select class="form-select" aria-label="Select Municipality " asp-for="MunicipalId">
									<option value="">Select Municipality </option>
									@foreach (var municipal in ViewBag.Municipalies as SelectList)
									{
										<option value="@municipal.Value">@municipal.Text</option>
									}
							</select>
								<span asp-validation-for="MunicipalId" class="text-danger" id="entityName"></span>
						</div>
					</div>
				</div>
			</div>

			<section style="margin:15px">
			<h5><strong>List of Documents</strong></h5>

			<div class="file-upload-container">

						<div class="file-upload-section" >
							<label for="file1" style="flex: 1;"><strong>Certificate of Incorporation:</strong></label>
							<input type="file" id="file1" name="file1" style="flex: 1; margin-left: 189px;">
						</div>
						<hr />
 					<div class="file-upload-section" >
							<label for="file2" style="flex: 1;"><strong>PAN Card of Company:</strong></label>
							<input type="file" id="file2" name="file2" style="flex: 1; margin-left: 189px;">
						</div>


			</div>


			</section>

				<button type="button" class="btn btn-warning" style="margin-left: 600px; font-weight: bold;">Submit Documents</button>
			</form>
	 </main>

		

    
 
 
 
 
 </div>




	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
	<script src="https://kit.fontawesome.com/a076d05399.js"></script>

	
</body>
</html>

